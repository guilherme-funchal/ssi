{
  "name": "siteSecurity",
  "module": "auth",
  "action": "provider",
  "options": {
    "connection": "ssi",
    "provider": "Database",
    "secret": "gfs@2109",
    "users": {
      "table": "users",
      "identity": "id",
      "username": "email",
