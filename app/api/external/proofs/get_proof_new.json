      {
        "name": "token",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{$_COOKIE.token}}"
        },
        "outputType": "text"
      },
      {
        "name": "query",
        "module": "dbconnector",
        "action": "select",
        "options": {
          "connection": "ssi",
          "sql": {
            "type": "SELECT",
            "columns": [
              {
                "table": "proofs",
                "column": "id"
              },
              {
                "table": "proofs",
                "column": "name"
              },
              {
                "table": "proofs",
                "column": "description"
              },
              {
                "table": "proofs",
                "column": "req_attrs"
              },
              {
                "table": "proofs",
                "column": "predicates"
              },
              {
                "table": "proofs",
                "column": "schema"
              },
              {
                "table": "proofs",
                "column": "state"
              },
              {
                "table": "proofs",
                "column": "date"
              },
              {
                "table": "proofs",
                "column": "valid"
              },
              {
                "table": "proofs",
                "column": "id_user"
              }
            ],
            "table": {
              "name": "proofs"
            },
            "joins": [],
            "wheres": {
              "condition": "AND",
              "rules": [
                {
                  "id": "proofs.id",
                  "field": "proofs.id",
                  "type": "double",
                  "operator": "equal",
                  "value": "{{$_POST.id}}",
                  "data": {
                    "table": "proofs",
                    "column": "id",
                    "type": "number"
                  },
                  "operation": "="
                }
              ],
              "conditional": null,
              "valid": true
            },
            "query": "SELECT id, name, description, req_attrs, predicates, schema, state, date, valid, id_user\nFROM proofs\nWHERE id = :P1 /* {{$_POST.id}} */",
            "params": [
              {
                "operator": "equal",
                "type": "expression",
                "name": ":P1",
                "value": "{{$_POST.id}}"
              }
            ]
          }
        },
        "output": true,
        "meta": [
          {
            "name": "id",
            "type": "text"
          },
          {
            "name": "name",
            "type": "text"
          },
          {
            "name": "description",
            "type": "text"
          },
          {
            "name": "req_attrs",
            "type": "text"
          },
          {
            "name": "predicates",
            "type": "text"
          },
          {
            "name": "schema",
            "type": "text"
          },
          {
            "name": "state",
            "type": "text"
          },
          {
            "name": "date",
            "type": "datetime"
          },
          {
            "name": "valid",
            "type": "text"
          },
          {
            "name": "id_user",
            "type": "text"
          }
        ],
        "outputType": "array"
      },
      {
        "name": "proof_name",
        "module": "core",
        "action": "setvalue",
        "options": {
          "key": "proof_name",
          "value": "{{query[0].name}}"
        }
      },
      {
        "name": "schema_id",
        "module": "core",
        "action": "setvalue",
        "options": {
          "key": "schema_id",
          "value": "{{query[0].schema}}"
        }
      },
      {
        "name": "json_attributes",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "",
          "key": "json_attributes"
        }
      },
      {
        "name": "predicates",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{query[0].predicates}}",
          "key": "predicates"
        }
      },
      {
        "name": "attr",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{query[0].req_attrs}}"
        }
      },
      {
        "name": "attributes",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{attr.split(',')}}",
          "key": "attributes"
        }
      },
      {
        "name": "size",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{attributes.count()}}",
          "key": "size"
        }
      },
      {
        "name": "tst_size",
        "module": "core",
        "action": "setcookie",
        "options": {
          "value": "{{size}}"
        }
      },
      {
        "name": "repeat",
        "module": "core",
        "action": "repeat",
        "options": {
          "repeat": "{{attributes}}",
          "outputFields": [],
          "exec": {
            "steps": {
              "name": "",
              "module": "core",
              "action": "condition",
              "options": {
                "if": "{{size==1}}",
                "then": {
                  "steps": {
                    "name": "json_attributes",
                    "module": "core",
                    "action": "setvalue",
                    "options": {
                      "value": "\"email_referent\":{\"name\":\"email\",\"non_revoked\":{\"to\":1628013141,\"from\":1628013141}}",
                      "key": "json_attributes"
                    },
                    "outputType": "text"
                  }
                },
                "else": {
                  "steps": [
                    {
                      "name": "json_attributes_tmp",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "\"{{$value}}_referent\": {\"name\": \"{{$value}}\",\"non_revoked\": {\"to\": 1628013141, \"from\": 1628013141}}",
                        "key": "json_attributes_tmp"
                      }
                    },
                    {
                      "name": "json_attributes",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{json_attributes+json_attributes_tmp}}",
                        "key": "json_attributes"
                      }
                    }
                  ]
                }
              },
              "outputType": "boolean"
            }
          }
        },
        "output": true,
        "meta": [
          {
            "name": "$index",
            "type": "number"
          },
          {
            "name": "$number",
            "type": "number"
          },
          {
            "name": "$name",
            "type": "text"
          },
          {
            "name": "$value",
            "type": "object"
          }
        ],
        "outputType": "array"
      },
      {
        "name": "header",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{\"name\": \"{{proof_name}}\",\n    \"version\": \"1.0\",\"requested_attributes\":",
          "key": "header"
        },
        "output": true,
        "disabled": true
      },
      {
        "name": "basement",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": ",\"requested_predicates\":{}}",
          "key": "basement"
        },
        "disabled": true
      },
      {
        "name": "header",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{",
          "key": "header"
        },
        "output": true
      },
      {
        "name": "basement",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "}",
          "key": "basement"
        }
      },
      {
        "name": "json_attributes",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{header+json_attributes+basement}}",
          "key": "json_attributes"
        }
      },
      {
        "name": "json_attributes",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{json_attributes.replace('}}\"', '}},\"')}}",
          "key": "json_attributes"
        }
      },
      {
        "name": "json_attributes",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{json_attributes.toJSON()}}",
          "key": "json_attributes"
        },
        "disabled": true
      },
      {
        "name": "json_attributes",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{json_attributes.parseJSON()}}",
          "key": "json_attributes"
        }
      },
      {
        "name": "json_tst",
        "module": "core",
        "action": "setcookie",
        "options": {
          "value": "{{json_attributes}}"
        }
      },
      {
        "name": "api",
        "module": "api",
        "action": "send",
        "options": {
          "url": "https://{{$_ENV.REST_HOST}}:{{$_ENV.REST_PORT}}/present-proof/send-request",
          "dataType": "json",
          "method": "POST",
          "headers": {
            "Authorization": "{{'Bearer '+token}}"
          },
          "passErrors": false,
          "data": "{\"connection_id\": \"{{connection_id}}\", \n\"proof_request\": \n{\"name\": \"{{proof_name}}\", \n\"version\": \"1.0\", \n\"requested_attributes\": \n\"{{json_attributes}}\", \n\"requested_predicates\": {}}}"
        },
        "disabled": true
      },
      {
        "name": "api",
        "module": "api",
        "action": "send",
        "options": {
          "url": "https://{{$_ENV.REST_HOST}}:{{$_ENV.REST_PORT}}/present-proof/send-request",
          "dataType": "json",
          "method": "POST",
          "headers": {
            "Authorization": "{{'Bearer '+token}}",
            "Accept": "application/json"
          },
          "data": {
            "connection_id": "{{connection_id}}",
            "proof_request": "{{json_attributes}}"
          }
        },
        "output": true,
        "disabled": true
      }
    ]
  }
