{
  "meta": {
    "$_POST": [
      {
        "type": "text",
        "name": "credential_id"
      },
      {
        "type": "text",
        "name": "connection_id"
      },
      {
        "type": "text",
        "name": "credential_definition_id"
      },
      {
        "type": "array",
        "options": {
          "rules": {}
        },
        "name": "attributes"
      }
    ],
    "$_COOKIE": [
      {
        "type": "text",
        "name": "token"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "token",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{$_COOKIE.token}}",
          "key": "token"
        }
      },
      {
        "name": "connection_id",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{$_POST.connection_id}}"
        }
      },
      {
        "name": "cred_def_id",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{$_POST.credential_definition_id}}"
        }
      },
      {
        "name": "count",
        "module": "core",
        "action": "setvalue",
        "options": {
          "key": "count",
          "value": "{{$_POST.attributes.count()}}"
        }
      },
      {
        "name": "repeat",
        "module": "core",
        "action": "repeat",
        "options": {
          "repeat": "{{$_POST.attributes}}",
          "outputFields": [],
          "exec": {
            "steps": {
              "name": "",
              "module": "core",
              "action": "condition",
              "options": {
                "if": "{{count==1}}",
                "then": {
                  "steps": [
                    {
                      "name": "name",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{$value.keys().toString()}}"
                      }
                    },
                    {
                      "name": "value",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{$value.values().toString()}}"
                      }
                    },
                    {
                      "name": "cred_preview",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": {
                          "attributes": [
                            {
                              "name": "{{name}}",
                              "value": "{{value}}"
                            }
                          ]
                        },
                        "schema": [],
                        "key": "cred_preview"
                      },
                      "outputType": "array",
                      "output": true
                    },
                    {
                      "name": "cred_export",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{cred_preview}}",
                        "schema": [],
                        "key": "cred_export"
                      },
                      "outputType": "array",
                      "output": true
                    }
                  ]
                },
                "else": {
                  "steps": [
                    {
                      "name": "cred_tmp",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "key": "cred_tmp",
                        "value": "{{cred_export}}"
                      }
                    },
                    {
                      "name": "name",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{$value.keys().toString()}}"
                      }
                    },
                    {
                      "name": "value",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{$value.values().toString()}}"
                      }
                    },
                    {
                      "name": "cred_preview",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "\"name\": \"{{name}}\", \"value\": \"{{value}}\"",
                        "schema": [],
                        "key": "cred_preview"
                      },
                      "outputType": "array",
                      "output": true
                    },
                    {
                      "name": "cred_export",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{cred_preview+cred_export}}",
                        "schema": [],
                        "key": "cred_export"
                      },
                      "outputType": "text",
                      "output": true
                    }
                  ]
                }
              },
              "outputType": "boolean"
            }
          }
        },
        "output": true,
        "meta": [
          {
            "name": "$index",
            "type": "number"
          },
          {
            "name": "$number",
            "type": "number"
          },
          {
            "name": "$name",
            "type": "text"
          },
          {
            "name": "$value",
            "type": "object"
          },
          {
            "name": "cred_preview",
            "type": "array"
          },
          {
            "name": "cred_export",
            "type": "array"
          }
        ],
        "outputType": "array"
      },
      {
        "name": "header",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{\"attributes\":[{",
          "key": "header"
        }
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{count>1}}",
          "then": {
            "steps": [
              {
                "name": "baseboard",
                "module": "core",
                "action": "setvalue",
                "options": {
                  "value": "}]}",
                  "key": "baseboard"
                }
              },
              {
                "name": "cred_export",
                "module": "core",
                "action": "setvalue",
                "options": {
                  "value": "{{cred_export.replace('\"\"', '\"},{\"')}}",
                  "schema": [],
                  "key": "cred_export"
                },
                "outputType": "array",
                "output": true
              },
              {
                "name": "attributes",
                "module": "core",
                "action": "setvalue",
                "options": {
                  "value": "{{header+cred_export+baseboard}}",
                  "schema": [],
                  "key": "attributes"
                },
                "outputType": "text",
                "output": true
              },
              {
                "name": "attributes",
                "module": "core",
                "action": "setvalue",
                "options": {
                  "key": "attributes",
                  "value": "{{attributes.parseJSON()}}"
                }
              }
            ]
          },
          "else": {
            "steps": [
              {
                "name": "attributes",
                "module": "core",
                "action": "setvalue",
                "options": {
                  "key": "attributes",
                  "value": "{{cred_export.toJSON()}}"
                }
              },
              {
                "name": "attributes",
                "module": "core",
                "action": "setvalue",
                "options": {
                  "key": "attributes",
                  "value": "{{attributes.parseJSON()}}"
                }
              }
            ]
          }
        },
        "outputType": "boolean"
      },
      {
        "name": "api_credentials",
        "module": "api",
        "action": "send",
        "options": {
          "method": "POST",
          "url": "https://{{$_ENV.REST_HOST}}:{{$_ENV.REST_PORT}}/issue-credential/send-offer",
          "dataType": "json",
          "data": {
            "connection_id": "{{connection_id}}",
            "cred_def_id": "{{cred_def_id}}",
            "credential_preview": "{{attributes}}"
          },
          "headers": {
            "Authorization": "{{'Bearer '+token}}",
            "Accept": "application/json"
          }
        },
        "output": true
      }
    ]
  }
}