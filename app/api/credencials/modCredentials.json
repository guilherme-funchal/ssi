                    }
                  ],
                  "table": "credentials",
                  "returning": "id",
                  "query": "INSERT INTO credentials\n(credef_id, schema, template) VALUES (:P1 /* {{$_POST.credef_id}} */, :P2 /* {{$_POST.schema}} */, :P3 /* {{$_POST.template}} */)",
                  "params": [
                    {
                      "name": ":P1",
                      "type": "expression",
