{
  "meta": {
    "$_POST": [
      {
        "type": "text",
        "fieldName": "email",
        "options": {
          "rules": {}
        },
        "name": "email"
      },
      {
        "type": "text",
        "fieldName": "password",
        "options": {
          "rules": {}
        },
        "name": "password"
      },
      {
        "type": "text",
        "fieldName": "pass_confirm",
        "options": {
          "rules": {}
        },
        "name": "pass_confirm"
      },
      {
        "type": "text",
        "fieldName": "first_name",
        "name": "first_name"
      },
      {
        "type": "text",
        "fieldName": "last_name",
        "name": "last_name"
      },
      {
        "type": "text",
        "fieldName": "document",
        "name": "document"
      },
      {
        "type": "text",
        "name": "role"
      },
      {
        "type": "text",
        "name": "last_login"
      }
    ],
    "$_COOKIE": [
      {
        "type": "text",
        "name": "org"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "email",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{$_POST.email.lowercase()}}"
        }
      },
      {
        "name": "validate_email",
        "module": "validator",
        "action": "validate",
        "options": {
          "data": [
            {
              "name": "validate_1",
              "value": "{{email}}",
              "rules": {
                "db:notexists": {
                  "param": {
                    "connection": "ssi",
                    "table": "users",
                    "column": "email"
                  },
                  "message": "Email j√° existe!"
                }
              }
            }
          ]
        },
        "disabled": true
      },
      {
        "name": "salt",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{TIMESTAMP.md5(TIMESTAMP).substr(0, 15)}}"
        }
      },
      {
        "name": "label",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{email}}"
        }
      },
      {
        "name": "webhook",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{$_ENV.WEBHOOK}}"
        }
      },
      {
        "name": "wallet_name",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{$_ENV.SERVERNAME}}.{{email}}"
        }
      },
      {
        "name": "api",
        "module": "api",
        "action": "send",
        "options": {
          "url": "{{$_ENV.ACCESS}}://{{$_ENV.REST_HOST}}:{{$_ENV.REST_PORT}}/multitenancy/wallet",
          "method": "POST",
          "data": {
            "key_management_mode": "managed",
            "label": "{{label}}",
            "wallet_dispatch_type": "default",
            "wallet_name": "{{wallet_name}}",
            "wallet_type": "indy",
            "wallet_webhook_urls": [
              "{{webhook}}"
            ],
            "wallet_key": "MySecretKey123"
          },
          "schema": [],
          "dataType": "json"
        },
        "output": true,
        "meta": [
          {
            "type": "array",
            "name": "data"
          },
          {
            "type": "object",
            "name": "headers"
          }
        ],
        "outputType": "object"
      },
      {
        "name": "token",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{api.data.token}}"
        }
      },
      {
        "name": "wallet_id",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{api.data.wallet_id}}"
        }
      },
      {
        "name": "api_cria_did",
        "module": "api",
        "action": "send",
        "options": {
          "url": "{{$_ENV.ACCESS}}://{{$_ENV.REST_HOST}}:{{$_ENV.REST_PORT}}/wallet/did/create",
          "method": "POST",
          "schema": [],
          "dataType": "json",
          "headers": {
            "Authorization": "{{'Bearer '+token}}"
          }
        },
        "output": true,
        "meta": [
          {
            "type": "array",
            "name": "data"
          },
          {
            "type": "object",
            "name": "headers"
          }
        ],
        "outputType": "object"
      },
      {
        "name": "did",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{api_cria_did.data.result.did}}"
        }
      },
      {
        "name": "verkey",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{api_cria_did.data.result.verkey}}"
        }
      },
      {
        "name": "api_registra_ledger",
        "module": "api",
        "action": "send",
        "options": {
          "url": "{{$_ENV.ACCESS}}://{{$_ENV.LEDGER_BROWSER}}/register",
          "method": "POST",
          "schema": [],
          "dataType": "json",
          "data": {
            "did": "{{did}}",
            "verkey": "{{verkey}}"
          }
        },
        "output": true,
        "meta": [
          {
            "type": "array",
            "name": "data"
          },
          {
            "type": "object",
            "name": "headers"
          }
        ],
        "outputType": "object"
      },
      {
        "name": "api_atribui_did",
        "module": "api",
        "action": "send",
        "options": {
          "url": "{{$_ENV.ACCESS+'://'+$_ENV.REST_HOST+':'+$_ENV.REST_PORT+'/wallet/did/public?did='+did}}",
          "method": "POST",
          "schema": [],
          "dataType": "json",
          "headers": {
            "Authorization": "{{'Bearer '+token}}"
          }
        },
        "output": true,
        "meta": [
          {
            "type": "array",
            "name": "data"
          },
          {
            "type": "object",
            "name": "headers"
          }
        ],
        "outputType": "object"
      },
      {
        "name": "insert_user",
        "module": "dbupdater",
        "action": "insert",
        "options": {
          "connection": "ssi",
          "sql": {
            "type": "insert",
            "values": [
              {
                "table": "users",
                "column": "first_name",
                "type": "text",
                "value": "{{$_POST.first_name}}"
              },
              {
                "table": "users",
                "column": "last_name",
                "type": "text",
                "value": "{{$_POST.last_name}}"
              },
              {
                "table": "users",
                "column": "email",
                "type": "text",
                "value": "{{$_POST.email}}"
              },
              {
                "table": "users",
                "column": "document",
                "type": "text",
                "value": "{{$_POST.document}}"
              },
              {
                "table": "users",
                "column": "role",
                "type": "text",
                "value": "user"
              },
              {
                "table": "users",
                "column": "token",
                "type": "text",
                "value": "{{token}}"
              },
              {
                "table": "users",
                "column": "last_login",
                "type": "text",
                "value": "{{NOW_UTC}}"
              },
              {
                "table": "users",
                "column": "verkey",
                "type": "text",
                "value": "{{verkey}}"
              },
              {
                "table": "users",
                "column": "did",
                "type": "text",
                "value": "{{did}}"
              },
              {
                "table": "users",
                "column": "pass_salt",
                "type": "text",
                "value": "{{salt}}"
              },
              {
                "table": "users",
                "column": "pass_hash",
                "type": "text",
                "value": "{{$_POST.password.sha512(salt)}}"
              },
              {
                "table": "users",
                "column": "wallet_id",
                "type": "text",
                "value": "{{wallet_id}}"
              },
              {
                "table": "users",
                "column": "organization",
                "type": "text",
                "value": "{{$_COOKIE.org}}"
              }
            ],
            "table": "users",
            "returning": "id",
            "query": "INSERT INTO users\n(first_name, last_name, email, document, role, token, last_login, verkey, did, pass_salt, pass_hash, wallet_id, organization) VALUES (:P1 /* {{$_POST.first_name}} */, :P2 /* {{$_POST.last_name}} */, :P3 /* {{$_POST.email}} */, :P4 /* {{$_POST.document}} */, 'user', :P5 /* {{token}} */, :P6 /* {{NOW_UTC}} */, :P7 /* {{verkey}} */, :P8 /* {{did}} */, :P9 /* {{salt}} */, :P10 /* {{$_POST.password.sha512(salt)}} */, :P11 /* {{wallet_id}} */, :P12 /* {{$_COOKIE.org}} */)",
            "params": [
              {
                "name": ":P1",
                "type": "expression",
                "value": "{{$_POST.first_name}}"
              },
              {
                "name": ":P2",
                "type": "expression",
                "value": "{{$_POST.last_name}}"
              },
              {
                "name": ":P3",
                "type": "expression",
                "value": "{{$_POST.email}}"
              },
              {
                "name": ":P4",
                "type": "expression",
                "value": "{{$_POST.document}}"
              },
              {
                "name": ":P5",
                "type": "expression",
                "value": "{{token}}"
              },
              {
                "name": ":P6",
                "type": "expression",
                "value": "{{NOW_UTC}}"
              },
              {
                "name": ":P7",
                "type": "expression",
                "value": "{{verkey}}"
              },
              {
                "name": ":P8",
                "type": "expression",
                "value": "{{did}}"
              },
              {
                "name": ":P9",
                "type": "expression",
                "value": "{{salt}}"
              },
              {
                "name": ":P10",
                "type": "expression",
                "value": "{{$_POST.password.sha512(salt)}}"
              },
              {
                "name": ":P11",
                "type": "expression",
                "value": "{{wallet_id}}"
              },
              {
                "name": ":P12",
                "type": "expression",
                "value": "{{$_COOKIE.org}}"
              }
            ]
          }
        },
        "meta": [
          {
            "name": "identity",
            "type": "text"
          },
          {
            "name": "affected",
            "type": "number"
          }
        ]
      }
    ]
  }
}