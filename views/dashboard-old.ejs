<meta name="ac:route" content="/dashboard">
<div class="wappler-block mt-4 mb-0 pt-5 pb-0 container-fluid">

    <h5 class="text-center">Mensagens</h5>

    <div class="table-responsive w-100">
        <table class="table table-striped table-bordered table-hover table-sm mw-100">
            <thead>
                <tr>
                    <th>State</th>
                    <th>Message</th>
                    <th>From</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody is="dmx-repeat" dmx-generator="bs4table" dmx-bind:repeat="content.sc_messages.data.query" id="tableRepeat1">
                <tr dmx-on:click="data_detail_messages.select(id);modal1.show()">
                    <td dmx-text="state"></td>
                    <td dmx-text="messageID"></td>
                    <td dmx-text="from"></td>
                    <td dmx-text="date"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="wappler-block mt-4 mb-0 pt-5 pb-0 container-fluid">
    <h5 class="text-center">Conex√µes</h5>
