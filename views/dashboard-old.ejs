    <div class="table-responsive">
        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>Credef</th>
                    <th>Schema</th>
                    <th>State</th>
                </tr>
            </thead>
            <tbody is="dmx-repeat" dmx-generator="bs4table" dmx-bind:repeat="content.sc_credentials.data.query" id="tableRepeat3">
                <tr>
                    <td dmx-text="credef_id"></td>
                    <td dmx-text="schema"></td>
