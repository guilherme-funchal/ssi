<dmx-data-detail id="data_detail_connections" dmx-bind:data="content.sc_credentials.data.query" key="id"></dmx-data-detail>
<dmx-data-detail id="data_detail_messages" dmx-bind:data="sc_messages.data.query" key="id"></dmx-data-detail>
