        <thead>
            <tr>
                <th>Connection</th>
                <th>Partner name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody is="dmx-repeat" dmx-generator="bs4table" dmx-bind:repeat="content.sc_connections.data.query" id="tableRepeat2">
