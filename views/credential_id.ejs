<div class="modal pt-5" id="modal1" is="dmx-bs4-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Credencial</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" is="dmx-repeat" id="repeat1" dmx-bind:repeat="data_detail1.data.attrs">
                    <div class="col">
                        <p dmx-text="$key.uppercase()+':'+$value"></p>
                    </div>
                    <div class="col-break w-100 small mb-n5"></div>

                </div>
            </div>
            <br>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>


<div class="container mt-4 pt-5">





    <h1 class="text-center">Credencias</h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-sm">
            <thead>
                <tr>
                    <th class="text-center font-weight-bold">Referent</th>
                    <th class="text-center font-weight-bold">Schema</th>
                    <th class="text-center font-weight-bold">Cred def</th>
                </tr>
            </thead>
            <tbody is="dmx-repeat" dmx-generator="bs4table" dmx-bind:repeat="content.serverconnect1.data.api_credentials.data.results" id="tableRepeat1">
                <tr dmx-on:click="data_detail1.select(referent);modal1.show()">
                    <td dmx-text="referent"></td>
                    <td dmx-text="schema_id"></td>
                    <td dmx-text="cred_def_id"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<meta name="ac:route" content="/credential_id">

